{
  "manifest_version": 3,
  "name": "YouTube Summarizer",
  "version": "1.0.0",
  "description": "Send YouTube videos to your summarizer app with toolbar button or YouTube UI button",
  "permissions": ["activeTab"],
  "host_permissions": ["*://*.youtube.com/*", "*://*.youtu.be/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Summarize this video"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*",
        "*://youtu.be/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}

