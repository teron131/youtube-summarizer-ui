{
  "manifest_version": 3,
  "name": "YouTube Summarizer",
  "version": "1.0.0",
  "description": "Send YouTube videos to your summarizer app",
  "permissions": ["activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Summarize this video"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}

